extends layout
block headers
    link(rel='stylesheet', href='/stylesheets/loading.css')
    script(src='/js/client_manage_lav_mappings.js')
    link(rel='stylesheet', href='/stylesheets/manage_styles.css')


block content
    .container-fluid
        .card.bg-secondary.mb-3
            .card-header
                .row
                    .col-md-11
                        h2(style="color:black")
                            | Manage LAV Mappings

        .card.bg-secondary.mb-3
            form
                table.table.table-hover#LAVMappings
                    thead
                        tr
                            th #
                            th Wrapper
                            th Global Graph
                            th owl:sameAs
                            th Covered Subgraph
                            th Delete
                    tbody
    #confirm-delete.modal.fade(tabindex='-1' role='dialog' aria-labelledby='myModalLabel' aria-hidden='true')
        .modal-dialog
            .modal-content
                .modal-header
                    h4#myModalLabel.modal-title Confirm Delete
                    button.close(type='button' data-dismiss='modal' aria-hidden='true') &times;
                .modal-body
                    p You are about to delete a LAVMapping. This procedure is irreversible.
                    p Do you want to proceed?
                .modal-footer
                    button.btn.btn-default(type='button' data-dismiss='modal') Cancel
                    a#deleteBtn.btn.btn-danger.btn-ok Delete